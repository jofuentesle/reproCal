---
import Layout from '~/layouts/LandingLayout2.astro';
import Hero2 from '~/components/widgets/Hero2.astro';

import Img1 from '~/assets/images/mesa/SobremesaTriangular.jpg';
import Img2 from '~/assets/images/mesa/SobremesaTriangular2.jpg';
import Img3 from '~/assets/images/mesa/SobremesaTriangular3.jpg';
import Img4 from '~/assets/images/mesa/SobremesaTriangular4.jpg';

const galleryImages = [
  { src: Img1.src, alt: 'Descripción de la imagen 1' },
  { src: Img2.src, alt: 'Descripción de la imagen 2' },
  { src: Img3.src, alt: 'Descripción de la imagen 3' },
  { src: Img4.src, alt: 'Descripción de la imagen 4' },
];

const metadata = {
  title: 'Página calendarios para mesa',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Calendario trinagular de mesa"
    title="Calendario en forma trinagular de mesa para el 2025."
    subtitle="Calendarios de mesa con espiral personalizados: elegancia y funcionalidad para tu escritorio, impresos en alta calidad. ¡Haz tu consulta!"
    actions={[
     { variant: 'primary', text: 'Pide tu oferta!', href: '/contacto', icon: 'tabler:square-rounded-arrow-right' },
     { text: 'Saber más', href: '#priceCaltriangulo' },
    ]}
    galleryImages={galleryImages}
  />
  
</Layout>
