---
import Layout from '~/layouts/LandingLayout2.astro';
import Hero2 from '~/components/widgets/Hero2.astro';


import SobremesaTriangular from '~/assets/images/mesa/SobremesaTriangular.jpg';

const metadata = {
  title: 'Página calendarios para mesa',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Calendario trinagular de mesa"
    title="Calendario en forma trinagular de mesa para el 2025."
    subtitle="Calendarios de mesa con espiral personalizados: elegancia y funcionalidad para tu escritorio, impresos en alta calidad. ¡Haz tu consulta!"
    actions={[
     { variant: 'primary', text: 'Pide tu oferta!', href: '#', icon: 'tabler:square-rounded-arrow-right' },
     { text: 'Saber más', href: '#' },
    ]}
    image={{
      src: SobremesaTriangular,
      alt: 'Calendario triangular de mesa para el 2025',
    }}
  />
</Layout>
