---
import Layout from '~/layouts/LandingLayout2.astro';

import Hero2 from '~/components/widgets/Hero2.astro';

import ParedEspiral from '~/assets/images/pared/ParedEspiral3.jpg';

const metadata = {
  title: 'Calendario de pared espiral',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Calendario de pared en espiral"
    title="Calendarios de pared con espiral para el 2025."
    subtitle="Calendarios de pared con espiral personalizados: organización práctica y diseño a tu medida, impresos en alta calidad. ¡Descubre nuestras opciones"
    actions={[
      { variant: 'primary', text: 'Pide tu oferta!', href: '#', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#' },
    ]}
    image={{
      src:  ParedEspiral,
      alt: '',
    }}
  />


</Layout>
