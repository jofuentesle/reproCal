---
import Layout from '~/layouts/LandingLayout2.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Table from '~/components/widgets/Table2.astro';

import ParedRevista from  '~/assets/images/pared/ParedRevista2.jpg'

const metadata = {
  title: 'Calendarios revista pared',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Calendario revista"
    title="Calendario tipo revista para pared del 2025."
    subtitle="Craft a tantalizing Coming Soon or Pre-Launch Landing Page that leaves visitors eagerly awaiting your launch."
    actions={[
      { variant: 'primary', text: 'Pide tu oferta!', href: 'contacto', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#' },
    ]}
    image={{
      src: ParedRevista,
      alt: 'Store with a Coming Soon sign. Pre-launch Landing Page',
    }}
  />
  <Table
    id="priceCalEspiral"
    title="Lista de precios especiales"
    tagline="calendario para pared con espiral"
    price1 ="330 €"
    price2 = "523 €"
    price3 = "919 €"
    price4 = "1.528 €"
    price5 =  "1.884 €"
/>  
</Layout>
